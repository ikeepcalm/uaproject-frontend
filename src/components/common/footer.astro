---
import { Icon } from "astro-icon/components";
import HeroImage from "../landing/footer-image.astro";
import type { FooterLink } from "../../types";

const links: Array<FooterLink> = [
  {
    url: "https://uaproject.xyz/wiki",
    description: "UAProject official knowledge base",
    icon: "mdi:database",
  },
  {
    url: "https://discord.gg/nyAMvRru7x",
    description: "UAProject on Discord",
    icon: "fa-brands:discord",
  },
  {
    url: "https://map.uaproject.xyz",
    description: "Astro on Twitter",
    icon: "mdi:map",
  },
];
---

<footer class="relative flex flex-col items-center justify-center h-auto sm:h-64 p-4">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4 mb-4">
    {
      links.map((link) => (
          <li class="flex justify-center">
            <a
                class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
                href={link.url}
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="size-full" name={link.icon} />
            </a>
          </li>
      ))
    }
  </ul>
