---
import { Image } from "astro:assets";
// import logoImage from "~/assets/uaproject.png";
import worldImage from "../../assets/world.png";
import HeroImage from "./footer-image.astro";
import Starfield from "./starfield.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2
      class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
      <!--<Image name="logomark" src={logoImage} id="logoImage" alt="pfp-image" class="size-20 text-white md:size-32" />-->
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-6xl md:text-8xl"
      >
        Український
        <br /> Minecraft
        <br /> сервер
      </div>
    </h2>
    <div
      id="world"
      class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Image
        class="h-4/5 w-3/4 object-cover"
        src={worldImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        align="right"
        alt="A floating Minecraft world"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #world {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #world {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
